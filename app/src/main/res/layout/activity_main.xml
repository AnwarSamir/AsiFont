<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.asi.testcustomfont.MainActivity">

    <com.asi.testcustomfont.AsiTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:font="fontawesome-webfont"
        android:text="\uf299"
        android:textSize="30sp"
        android:textColor="#946ce145"
        android:id="@+id/view2" />

    <com.asi.testcustomfont.AsiButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:font="Ubuntu-Regular"
        android:text="Dothis"
        android:id="@+id/view"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <com.asi.testcustomfont.AsiTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:font="Ubuntu-Regular"
        android:text="Do this for app"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/view"
        android:layout_toEndOf="@+id/view"
        android:layout_marginTop="140dp" />
</RelativeLayout>
